@using ISProject.Models
@model PAADs
@{ Layout = "~/Views/Shared/_Layout.cshtml";}

@{
    ViewBag.Title = "PAADs";
}

<div class="site-body">
    <div class="renglon-4">
        <p style="margin-right: 10px; text-align: center;">Tipo de formato:</p>
        <select name="select" class="">
            <option value="value1" selected> Todos</option>
            <option value="value2"> Periodo</option>
            <option value="value3"> Aprobado</option>
            <option value="value4"> Rechazado</option>
            <option value="value5"> En espera</option>
            <option value="value5"> Solicitud pendiente</option>
        </select>
    </div>
    <div class="p-col">
        <table>
            <thead>
                <tr>
                    <td width="30%"> Actividad</td>
                    <td width="20%"> Producción</td>
                    <td width="10%"> Lugar</td>
                    <td width="5%"> %Avance</td>
                    <td width="5%"> CACEI</td>
                    <td width="5%"> Cuerpo academico</td>
                    <td width="5%"> ISO 9000</td>
                    <td width="8%"> Opciones</td>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.activities)
                {
                    <tr>
                        <td>@item.actividad</td>
                        <td>@item.produccion</td>
                        <td>@item.lugar</td>
                        <td>@item.porcentaje_inicial %</td>
                        <td>@item.cacei</td>
                        <td>@item.cuerpo_academico</td>
                        <td>@item.iso</td>
                        <td>
                            @Html.ActionLink(" ", "DeleteActivity", "LlenarPAAD", new { id = item.Id }, new { @class = "glyphicon glyphicon-trash btn btn-danger", @onclick = "eliminar()" })
                            @Html.ActionLink(" ", "DeleteActivity", "LlenarPAAD", new { id = item.Id }, new { @class = "glyphicon glyphicon-trash btn btn-danger", @onclick = "eliminar()" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>